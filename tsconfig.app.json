{
  "extends": "./tsconfig.json",
  "compilerOptions": {
		"outDir": "./out-tsc/app",
		"typeRoots": ["node_modules/@types"],
		"types": ["node"]
	},
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
